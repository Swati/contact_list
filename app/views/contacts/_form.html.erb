<script
src="https://code.jquery.com/jquery-3.2.1.min.js"
integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
crossorigin="anonymous"></script>
<%= nested_form_for @contact do |form| %>
    <%= error_messages_for(form.object) %>
    <div class="form-group" >
      <%= form.label :name, 'Name:' %><br>
      <%= form.text_field(:name) %>
    </div>

    <div class="form-group" >
      <%= form.label :name, 'Phone Number:' %><br>
      <%= form.fields_for :phone_numbers do |phone_number| %>
          <%= render "phone_number_fields", f: phone_number %>
      <% end %>

      <%= form.link_to_add content_tag(:i, "", class: "fa fa-plus") + " Add another phone number", :phone_numbers %>
    </div>

    <div class="form-group" >
      <%= 'Postal Address:' %><br>
      <%= form.fields_for :postal_addresses do |postal_address| %>
          <%= render "postal_address_fields", f: postal_address %>
      <% end %>

      <%= form.link_to_add content_tag(:i, "", class: "fa fa-plus") + " Add another postal address", :postal_addresses %>
    </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
    <%= link_to 'Cancel', contacts_path, class:"btn btn-primary"  %>
  </div>
<% end %>
